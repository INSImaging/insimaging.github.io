<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<style>
    /* Basic styling for tab buttons */
    .tab {
        cursor: pointer;
        /* padding: 10px 20px; */
        /* margin-right: 5px; */
        display: inline-block;

        margin: 0px;
        padding: 5px;
        cursor: pointer;

        display:inline-block;
        /* padding:.15em .3em; */
        font-size: 1.0rem;
        font-weight: 400;
        line-height: 1;

        vertical-align:baseline;
        /* border-radius:.1rem; */

        margin-bottom: 0rem;

        border: 1px solid var(--global-tab-bg-color);
        background-color: var(--global-bg-color);  // _themes.scss
        /* color: var(--global-tab-fg-color); */
    }

    /* Active tab styling */
    .tab.active {
        color: var(--global-tab-fg-color);
        /* border: 2px solid #787878; */
        background-color: var(--global-tab-active-color);
    }

    /* Tab content styling */
    .tab-content {
        display: none;
        padding-left: 15px;
        padding-right: 0px;
        padding-bottom: 30px;
        /* margin-top: 111px; */
        border: 2px solid var(--global-tab-bg-color); 
        border-left: none;
        border-right: none;
        /* border-bottom: none; */
    }

    /* Show active tab content */
    .tab-content.active {
        display: block;
        margin-top: 0rem;
        padding-top: 0rem;

        /* border: 1px dashed #bdbdbd; */
    }
</style>


<body>

    <!-- Tab buttons -->
    <div style="padding-top:1rem;">
        <span class="tab active" onclick="openTab('tab1')">All</span>
        <span class="tab" onclick="openTab('tab2')">Optimization</span>
        <span class="tab" onclick="openTab('tab3')">Image processing</span>
        <span class="tab" onclick="openTab('tab4')">Machine learning</span>
    </div>

    <!-- Tab contents -->    
    <div id="tab1" class="tab-content active">
      <div class="publications" style="padding-top:rem;margin-top:0rem;">
        {% bibliography %}
      </div>
    </div>
    <div id="tab2" class="tab-content">
      <div class="publications">
        {% bibliography -q @*[cate_primary=optimization] %}
      </div>
    </div>
    <div id="tab3" class="tab-content">
      <div class="publications">
        {% bibliography -q @*[cate_primary=imaging] %}
      </div>
    </div>
    <div id="tab4" class="tab-content">
      <div class="publications">
        {% bibliography -q @*[cate_primary=learning || cate_secondary=learning] %}
      </div>
    </div>

    <script>
        function openTab(tabId) {
            // Get all elements with class="tab-content" and hide them
            const tabContents = document.querySelectorAll('.tab-content');
            tabContents.forEach(content => content.classList.remove('active'));

            // Get all elements with class="tab" and remove the class "active"
            const tabs = document.querySelectorAll('.tab');
            tabs.forEach(tab => tab.classList.remove('active'));

            // Show the current tab, and add an "active" class to the button that opened the tab
            document.getElementById(tabId).classList.add('active');
            document.querySelector(`.tab[onclick="openTab('${tabId}')"]`).classList.add('active');
        }
    </script>

</body>